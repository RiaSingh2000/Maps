<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerProfileCreation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/etSellerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Name"
                android:textSize="25dp"
                android:layout_below="@id/etSellerName"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/etShopName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvShopName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etShopName"
                android:text="CustomerCare Number"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/etSellerPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvPhone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/tvLocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etSellerPhone"
                android:text="Locality"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/etSellerLocality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvLocality"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />

            <Button
                android:id="@+id/btRegisterSeller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/etSellerLocality"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="CREATE PROFILE"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"

                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>