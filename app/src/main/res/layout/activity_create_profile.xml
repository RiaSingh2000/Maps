<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F400FF">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Profile Here"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <ScrollView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DF73F6">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/etName"
                android:text="Phone No."
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
               />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvPhone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:inputType="number"
               />

            <TextView
                android:id="@+id/tvSteet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPhone"
                android:text="Street No."
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
               />
            <EditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvSteet"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tvLocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etStreet"
                android:text="Locality"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
               />
            <AutoCompleteTextView
                android:id="@+id/etLocality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvLocality"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
               />

            <TextView
                android:id="@+id/tvHouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etLocality"
                android:text="House"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
               />
            <EditText
                android:id="@+id/etHouse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvHouse"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />

            <Button
                android:id="@+id/btRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/etHouse"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="CREATE PROFILE"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_design1"

                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>