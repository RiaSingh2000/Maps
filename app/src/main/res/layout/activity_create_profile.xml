<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2f"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shoppingbag"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customers information"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/bungee"
        android:textColor="@android:color/white"
        android:includeFontPadding="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your information here!"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:includeFontPadding="false"
        />

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:padding="10dp">



            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25dp"
                android:fontFamily="@font/antic"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_design"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />



            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@id/etName"
                android:text="Phone No."
                android:textSize="25dp"
                android:fontFamily="@font/antic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvPhone"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_design"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/tvHouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocality"
                android:text="House"
                android:textSize="25dp"
                android:fontFamily="@font/antic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                />
            <EditText
                android:id="@+id/etHouse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvHouse"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_design"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                />


            <TextView
                android:id="@+id/tvSteet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPhone"
                android:text="Street No."
                android:textSize="25dp"
                android:fontFamily="@font/antic"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvSteet"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_design"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tvLocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etHouse"
                android:text="Locality"
                android:textSize="25dp"
                android:fontFamily="@font/antic"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/autoLoc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/tvLocality"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_text_design"
                    android:hint="Enter your location"
                    android:paddingLeft="10dp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/currentLocTv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/tvShopName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_text_design"
                    android:paddingLeft="10dp"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/HiddenTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset current Location"
                android:textAlignment="viewEnd"
                android:textSize="15dp"
                android:visibility="invisible"/>


            <Button
                android:id="@+id/btRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/HiddenTv"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="CREATE PROFILE"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_design2"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>