<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellerDisplayActivity"
    android:id="@+id/lL_SellerDisplay"
    android:layout_marginVertical="32dp">
<TextView
    android:id="@+id/tvShopname"
    android:text="Shopname"
    android:textSize="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:textAlignment="center"
    android:gravity="center_horizontal"
    android:layout_marginVertical="20dp"/>
    <TextView
        android:id="@+id/tvSellerName"
        android:textSize="30dp"
        android:text="SellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvShopLocation"
        android:textSize="30dp"
        android:text="shop Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALL"
        android:autoLink="phone"
        android:textSize="48dp"
        android:layout_margin="48dp"
        android:linksClickable="true"
        />
    <Button
        android:id="@+id/btnChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER VIA APP"
        android:onClick="goToChatActivity"
        android:layout_margin="48dp"
        />


</LinearLayout>