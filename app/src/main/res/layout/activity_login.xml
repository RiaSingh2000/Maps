<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Buyer.BuyerLogin"
    android:background="#fece2f">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/shoppingbag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        app:fontFamily="@font/bungee"
        android:fontFamily="@font/bungee"
        android:layout_below="@id/icon"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginTop="120dp"
        android:text="Please Login using your Google account"
        android:fontFamily="@font/antic"
        app:fontFamily="@font/antic"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5sp"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/btn_google_sigin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="24dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_design1"
        android:drawableLeft="@drawable/ic_google_square_foreground"
        android:text="GOOGLE"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</RelativeLayout>